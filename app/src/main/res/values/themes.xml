<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme for Android versions below 12 -->
    <style name="Theme.CardinalDial" parent="Theme.Material3.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/cardinal_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/cardinal_blue_light</item>
        <item name="colorOnPrimaryContainer">@color/cardinal_blue_dark</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/cardinal_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/cardinal_accent_light</item>
        <item name="colorOnSecondaryContainer">@color/cardinal_accent_dark</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>